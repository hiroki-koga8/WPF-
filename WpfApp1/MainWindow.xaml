<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">

    <DockPanel Margin="10">
        <!-- 上部のボタン -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="新規登録" Command="{Binding AddTaskCommand}" Width="100" Margin="5"/>
            <Button Content="削除" Command="{Binding DeleteTaskCommand}" Width="100" Margin="5"/>
        </StackPanel>

        <!-- タスク一覧 -->
        <DataGrid ItemsSource="{Binding Tasks}"
                  SelectedItem="{Binding SelectedTask.Value, Mode=OneWayToSource}"
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="タスク名" Binding="{Binding TaskName.Value}" />
                <DataGridTextColumn Header="開始日" Binding="{Binding StartDate.Value, StringFormat=yyyy/MM/dd}" />
                <DataGridTextColumn Header="終了日" Binding="{Binding EndDate.Value, StringFormat=yyyy/MM/dd}" />
                <DataGridTextColumn Header="状態" Binding="{Binding Status.Value}" />
                <DataGridTextColumn Header="予定工数" Binding="{Binding PlannedHours.Value}" />
                <DataGridTextColumn Header="実績工数" Binding="{Binding ActualHours.Value}" />
                <DataGridTextColumn Header="乖離" Binding="{Binding Gap.Value}" />
                <DataGridTemplateColumn Header="編集">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="編集" 
                                    Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                    CommandParameter="{Binding}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
