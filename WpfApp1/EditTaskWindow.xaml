<Window x:Class="WpfApp1.Views.EditTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:reactive="http://reactiveproperty.net"
        Title="タスク編集" Height="400" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,5">
            <TextBlock Text="タスク名:" Width="80"/>
            <TextBox Text="{Binding TaskName.Value, Mode=TwoWay}" Width="250"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,5" Grid.Row="1">
            <TextBlock Text="開始日:" Width="80"/>
            <DatePicker SelectedDate="{Binding StartDate.Value, Mode=TwoWay}" Width="250"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,5" Grid.Row="2">
            <TextBlock Text="終了日:" Width="80"/>
            <DatePicker SelectedDate="{Binding EndDate.Value, Mode=TwoWay}" Width="250"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,5" Grid.Row="3">
            <TextBlock Text="説明:" Width="80"/>
            <TextBox Text="{Binding Description.Value, Mode=TwoWay}" Width="250"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,5" Grid.Row="4">
            <TextBlock Text="状態:" Width="80"/>
            <ComboBox x:Name="StatusComboBox"
              Width="250"
              ItemsSource="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=StatusOptions}"
              SelectedItem="{Binding Status.Value, Mode=TwoWay}" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,5" Grid.Row="5">
            <TextBlock Text="予定時間:" Width="80"/>
            <TextBox Text="{Binding PlannedHours.Value, Mode=TwoWay}" Width="80"/>
            <TextBlock Text="実績時間:" Width="80" Margin="10,0,0,0"/>
            <TextBox Text="{Binding ActualHours.Value, Mode=TwoWay}" Width="80"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,5" Grid.Row="6">
            <TextBlock Text="備考:" Width="80"/>
            <TextBox Text="{Binding Remarks.Value, Mode=TwoWay}" Width="250"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="7" HorizontalAlignment="Right">
            <Button Content="OK" Width="75" Margin="5" Click="Ok_Click"/>
            <Button Content="キャンセル" Width="75" Margin="5" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
